@{
    ViewBag.Title = "Cadastrar app";
}

<p>Cadastre o aplicativo<br />Todos os campos são obrigatórios.</p>
<form class="send" action="/enviaDados" method="post" >
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do aplicativo" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea class="form-control" id="descricao" name="descricao" rows="3" placeholder="Descrição do aplicativo" required></textarea>
    </div>
    <div class="form-group">
    <label for="url">URL do aplicativo</label>
    <input type="text" class="form-control" id="url" name="url" placeholder="URL do aplicativo" required>
</div>

    <input type="submit" value="Enviar">
</form>
